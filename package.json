{
  "name": "LFVNCustomer",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.6.4",
  "scripts": {
    "web:build": "yarn workspace web build",
    "web:start": "yarn workspace web start",
    "web:dev": "yarn workspace web dev",
    "web:lint": "yarn workspace web lint",
    "mobile:android": "yarn workspace mobile android",
    "mobile:ios": "yarn workspace mobile ios",
    "mobile:lint": "yarn workspace mobile lint",
    "mobile:start": "yarn workspace mobile start",
    "mobile:test": "yarn workspace mobile test",
    "pod-install": "cd packages/mobile/ios && pod install",
    "postinstall": "yarn pod-install",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.1.0",
    "@gorhom/portal": "^1.0.14",
    "@miblanchard/react-native-slider": "^2.6.0",
    "@reduxjs/toolkit": "^2.2.5",
    "@types/react": "^18.3.3",
    "@types/react-native": "^0.73.0",
    "add": "^2.0.6",
    "axios": "^1.7.2",
    "crypto-js": "3.1.9-1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "react-native-svg": "^15.3.0",
    "react-native-web": "^0.19.12",
    "react-otp-input": "^3.1.1",
    "react-redux": "^9.1.2",
    "react-toastify": "^10.0.5",
    "redux-persist": "^6.0.0",
    "text-encoding": "^0.7.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/text-encoding": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "babel-plugin-react-native-web": "^0.19.12",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add ."
    ]
  }
}
